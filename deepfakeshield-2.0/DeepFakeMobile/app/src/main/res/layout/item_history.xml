<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageResultIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            tools:src="@drawable/ic_launcher_background"
            tools:tint="@android:color/holo_green_dark"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/textHistoryFilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="my_vacation_photo.jpg" />

            <TextView
                android:id="@+id/textHistoryTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="2025-08-08 12:30:00" />
        </LinearLayout>

        <TextView
            android:id="@+id/textHistoryConfidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="#E2E8F0"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textColor="#334155"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="99.87%" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
